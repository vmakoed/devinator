<div class="py-8 mx-auto">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Devinator</h1>
      <p class="text-gray-600 mb-6">AI-powered tech debt resolution for development teams</p>

      <%= form_with url: missions_path, method: :post, local: true, class: "inline-block" do |form| %>
        <%= form.submit "Start New Mission",
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 cursor-pointer" %>
      <% end %>

      <% if flash[:notice] %>
        <div class="mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>

    <% if @missions.any? %>
      <div class="bg-white rounded-lg shadow-lg text-left">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Created Missions</h2>
        </div>
        <div class="divide-y divide-gray-200">
          <% @missions.each do |mission| %>
            <div class="px-6 py-4 hover:bg-gray-50">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-sm font-medium text-gray-900"><%= mission.name %></h3>
                  <p class="text-sm text-gray-500">Created <%= time_ago_in_words(mission.created_at) %> ago</p>
                </div>
                <div class="flex items-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <% if mission.status == 'draft' %>
                      bg-yellow-100 text-yellow-800
                    <% else %>
                      bg-gray-100 text-gray-800
                    <% end %>">
                    <%= mission.status.capitalize %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-lg p-8 text-center">
        <div class="text-gray-400 mb-4">
          <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No missions yet</h3>
        <p class="text-gray-500">Start your first mission to begin identifying suitable tickets for AI assignment.</p>
      </div>
    <% end %>
  </div>
</div>
