<div class="py-8 mx-auto">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ol class="list-none p-0 inline-flex">
          <li class="flex items-center">
            <%= link_to "Missions", root_path, class: "text-blue-600 hover:text-blue-800" %>
            <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
              <path d="m285.476 272.971-134.95 134.95c-15.621 15.621-40.947 15.621-56.569 0l-135.83-135.83c-15.621-15.621-15.621-40.947 0-56.569l135.83-135.83c15.621-15.621 40.947-15.621 56.569 0l134.95 134.95c15.621 15.621 15.621 40.947 0 56.569z"/>
            </svg>
          </li>
          <li class="text-gray-500">Mission Details</li>
        </ol>
      </nav>

      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @mission.name %></h1>
      <p class="text-gray-600">Mission Details</p>
    </div>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- Mission Details -->
    <div class="bg-white rounded-lg shadow-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Mission Information</h2>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <p class="text-gray-900"><%= @mission.name %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
              <% if @mission.status == 'draft' %>
                bg-yellow-100 text-yellow-800
              <% elsif @mission.status == 'in_progress' %>
                bg-blue-100 text-blue-800
              <% else %>
                bg-gray-100 text-gray-800
              <% end %>">
              <%= @mission.status.capitalize %>
            </span>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Created</label>
            <p class="text-gray-900"><%= @mission.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Last Updated</label>
            <p class="text-gray-900"><%= @mission.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>

        <% if @mission.jql_query.present? %>
          <div class="mt-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">JQL Query</label>
            <div class="bg-gray-50 p-4 rounded-lg border">
              <pre class="font-mono text-sm text-gray-800 whitespace-pre-wrap"><%= @mission.jql_query %></pre>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-6 flex space-x-4">
      <% if @mission.status == 'draft' || @mission.jql_query.blank? %>
        <%= link_to "Input JQL Query", query_mission_path(@mission),
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
      <% else %>
        <%= link_to "Edit JQL Query", query_mission_path(@mission),
            class: "bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
      <% end %>

      <%= link_to "Back to Missions", root_path,
          class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-lg transition duration-200" %>
    </div>
  </div>
</div>