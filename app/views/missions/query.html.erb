<div class="py-8 mx-auto">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ol class="list-none p-0 inline-flex">
          <li class="flex items-center">
            <%= link_to "Missions", root_path, class: "text-blue-600 hover:text-blue-800" %>
            <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
              <path d="m285.476 272.971-134.95 134.95c-15.621 15.621-40.947 15.621-56.569 0l-135.83-135.83c-15.621-15.621-15.621-40.947 0-56.569l135.83-135.83c15.621-15.621 40.947-15.621 56.569 0l134.95 134.95c15.621 15.621 15.621 40.947 0 56.569z"/>
            </svg>
          </li>
          <li class="text-gray-500">Input JQL Query</li>
        </ol>
      </nav>

      <h1 class="text-3xl font-bold text-gray-900 mb-2">Input JQL Query</h1>
      <p class="text-gray-600 mb-2">Mission: <%= @mission.name %></p>
      <p class="text-sm text-gray-500">Enter a JQL query to fetch bug tickets from JIRA</p>
    </div>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- JQL Query Form -->
    <div class="bg-white rounded-lg shadow-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">JQL Query</h2>
      </div>

      <div class="p-6">
        <%= form_with model: @mission, url: query_mission_path(@mission), method: :patch, local: true do |form| %>
          <div class="mb-6">
            <%= form.label :jql_query, "Enter your JQL query:", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :jql_query,
                value: @mission.jql_query,
                rows: 6,
                placeholder: 'project = "PROJ" AND issuetype = Bug AND status = "Open"',
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 font-mono text-sm" %>
            <div class="mt-1 text-sm text-gray-500">
              Character count: <span id="char-count">0</span> / 5000
            </div>
          </div>

          <div class="flex justify-between">
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200">
              Save Query
            </button>

            <% if @mission.jql_query.present? %>
              <span class="text-sm text-gray-500 self-center">
                Query last saved <%= time_ago_in_words(@mission.updated_at) %> ago
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  // Character count
  const textarea = document.querySelector('#mission_jql_query');
  const charCount = document.querySelector('#char-count');

  function updateCharCount() {
    charCount.textContent = textarea.value.length;
  }

  textarea.addEventListener('input', updateCharCount);
  updateCharCount(); // Initialize count
</script>