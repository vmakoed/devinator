<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-md rounded-lg p-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-6">Create New Session</h1>

      <p class="text-gray-600 mb-8">
        Start a new session to analyze JIRA tickets and manage assignments to Devin.
      </p>

      <%= form_with model: @session, local: true, class: "space-y-6" do |form| %>
        <% if @session.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Please correct the following errors:
                </h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @session.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name,
                placeholder: "e.g., Bug Analysis Q4 2024",
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-500' if @session.errors[:name].any?}",
                required: true,
                minlength: 3,
                maxlength: 50 %>
          <% if @session.errors[:name].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @session.errors[:name].first %></p>
          <% end %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description,
                rows: 3,
                placeholder: "Optional description of what this session will focus on...",
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                maxlength: 500 %>
          <p class="mt-2 text-sm text-gray-500">Optional description to help identify this session later.</p>
        </div>

        <% if @session_configurations.any? %>
          <div>
            <%= label_tag "session[configuration_id]", "Configuration Template", class: "block text-sm font-medium text-gray-700" %>
            <%= select_tag "session[configuration_id]",
                  options_from_collection_for_select(@session_configurations, :id, :configuration_name, nil),
                  {
                    prompt: "Choose a saved configuration (optional)",
                    class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                  } %>
            <p class="mt-2 text-sm text-gray-500">Apply saved settings for JQL templates, complexity criteria, and notifications.</p>
          </div>
        <% end %>

        <div class="flex items-center justify-between pt-4">
          <%= link_to "Cancel", sessions_path,
                class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

          <%= form.submit "Create Session",
                class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
