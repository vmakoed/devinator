<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @session.name %></h1>
        <p class="mt-2 text-gray-600">Session Workspace</p>
      </div>
      <div class="flex space-x-3">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <%= @session.status.capitalize %>
        </span>
        <%= link_to "Session Settings", edit_session_path(@session),
              class: "bg-white hover:bg-gray-50 border border-gray-300 rounded-md shadow-sm px-4 py-2 text-sm font-medium text-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>

    <% if @session.description.present? %>
      <p class="mt-4 text-gray-700"><%= @session.description %></p>
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Quick Stats -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Active Queries</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @active_queries.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Recent Tickets</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @recent_tickets.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Devin Ready</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @pending_recommendations.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- JQL Queries Section -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900">JQL Queries</h3>
          <%= link_to "View All", session_jql_queries_path(@session),
                class: "text-sm text-blue-600 hover:text-blue-500" %>
        </div>

        <% if @session.jql_queries.any? %>
          <div class="space-y-3">
            <% @session.jql_queries.recent.limit(3).each do |query| %>
              <div class="border border-gray-200 rounded-lg p-3">
                <div class="flex items-center justify-between">
                  <h4 class="text-sm font-medium text-gray-900"><%= query.display_name %></h4>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                    <%= case query.status
                        when 'pending' then 'bg-yellow-100 text-yellow-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'executing' then 'bg-blue-100 text-blue-800'
                        when 'failed' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= query.status.titleize %>
                  </span>
                </div>
                <code class="text-xs text-gray-600 bg-gray-50 px-2 py-1 rounded mt-2 block">
                  <%= truncate(query.formatted_query, length: 60) %>
                </code>
                <% if query.can_execute? %>
                  <div class="mt-2">
                    <%= button_to "Execute", "#", method: :patch,
                          class: "text-xs bg-green-100 text-green-800 px-2 py-1 rounded hover:bg-green-200" %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="mt-4">
            <%= link_to "Add New Query", new_session_jql_query_path(@session),
                  class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 mb-4">No JQL queries created yet. Start by adding your first query to fetch tickets from JIRA.</p>
          <%= link_to "Add JQL Query", new_session_jql_query_path(@session),
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
        <% end %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <%= link_to "Manage Queries", session_jql_queries_path(@session),
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

          <%= link_to "View All Tickets", session_tickets_path(@session),
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

          <%= link_to "Review Recommendations", session_recommendations_path(@session),
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Activity</h3>
        <% if @recent_tickets.any? %>
          <div class="space-y-3">
            <% @recent_tickets.limit(5).each do |ticket| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
                <div class="flex items-center">
                  <span class="text-sm font-mono text-blue-600"><%= ticket.jira_key %></span>
                  <span class="ml-2 text-sm text-gray-900 truncate"><%= ticket.title %></span>
                </div>
                <span class="text-xs text-gray-500"><%= ticket.created_at.strftime("%m/%d") %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No tickets fetched yet. Start by adding a JQL query.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
