<div class="py-8 mx-auto">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ol class="list-none p-0 inline-flex">
          <li class="flex items-center">
            <%= link_to "Missions", root_path, class: "text-blue-600 hover:text-blue-800" %>
            <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
              <path d="m285.476 272.971-134.95 134.95c-15.621 15.621-40.947 15.621-56.569 0l-135.83-135.83c-15.621-15.621-15.621-40.947 0-56.569l135.83-135.83c15.621-15.621 40.947-15.621 56.569 0l134.95 134.95c15.621 15.621 15.621 40.947 0 56.569z"/>
            </svg>
          </li>
          <li class="flex items-center">
            <%= link_to "Input JQL Query", query_mission_path(@mission), class: "text-blue-600 hover:text-blue-800" %>
            <svg class="fill-current w-3 h-3 mx-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
              <path d="m285.476 272.971-134.95 134.95c-15.621 15.621-40.947 15.621-56.569 0l-135.83-135.83c-15.621-15.621-15.621-40.947 0-56.569l135.83-135.83c15.621-15.621 40.947-15.621 56.569 0l134.95 134.95c15.621 15.621 15.621 40.947 0 56.569z"/>
            </svg>
          </li>
          <li class="text-gray-500">Preview Tickets</li>
        </ol>
      </nav>

      <h1 class="text-3xl font-bold text-gray-900 mb-2">Preview Tickets</h1>
      <p class="text-gray-600 mb-2">Mission: <%= @mission.name %></p>
      <p class="text-sm text-gray-500">Review the tickets fetched from JIRA</p>
    </div>

    <!-- Flash Messages -->
    <% if flash[:success] %>
      <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
        <%= flash[:success] %>
      </div>
    <% end %>

    <% if flash[:warning] %>
      <div class="mb-6 p-4 bg-yellow-100 border border-yellow-400 text-yellow-700 rounded">
        <%= flash[:warning] %>
      </div>
    <% end %>

    <% if flash[:error] %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <%= flash[:error] %>
        <div class="mt-4 flex space-x-4">
          <% if @error_type == :invalid_query %>
            <%= link_to "Modify Query", query_mission_path(@mission), class: "text-red-800 underline hover:text-red-900" %>
          <% elsif @error_type == :api_error %>
            <%= link_to "Retry", preview_mission_tickets_path(@mission), class: "text-red-800 underline hover:text-red-900" %>
            <%= link_to "Modify Query", query_mission_path(@mission), class: "text-red-800 underline hover:text-red-900" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Ticket Count Badge -->
    <% if @tickets.present? %>
      <div class="mb-6 flex justify-between items-center">
        <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full font-semibold">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          Found <%= @ticket_count %> ticket<%= 's' unless @ticket_count == 1 %>
        </div>

        <%= link_to query_mission_path(@mission), class: "text-blue-600 hover:text-blue-800 font-medium" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Modify Query
        <% end %>
      </div>

      <!-- Tickets Table -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Key</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Summary</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assignee</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @tickets.each do |ticket| %>
                <tr class="hover:bg-gray-50 cursor-pointer" onclick="toggleDescription('<%= ticket.id %>')">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-sm font-medium text-blue-600"><%= ticket.jira_key %></span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900 font-medium"><%= ticket.summary %></div>
                    <div id="desc-<%= ticket.id %>" class="hidden mt-2 text-sm text-gray-600 bg-gray-50 p-3 rounded">
                      <strong>Description:</strong><br>
                      <%= ticket.description.present? ? truncate(ticket.description, length: 200) : "No description" %>
                      <% if ticket.labels.present? %>
                        <br><br>
                        <strong>Labels:</strong>
                        <% ticket.labels.split(', ').each do |label| %>
                          <span class="inline-block bg-gray-200 text-gray-700 px-2 py-1 rounded text-xs mr-1"><%= label %></span>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= ticket.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= ticket.priority || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <%= ticket.assignee || 'Unassigned' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= ticket.jira_created_at ? ticket.jira_created_at.strftime('%Y-%m-%d') : 'N/A' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Actions -->
      <div class="mt-8 flex justify-between items-center">
        <%= link_to query_mission_path(@mission), class: "text-gray-600 hover:text-gray-800 font-medium" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Query
        <% end %>

        <%= link_to confirm_mission_tickets_path(@mission), method: :post, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200" do %>
          Confirm and Continue
          <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        <% end %>
      </div>

    <% elsif !flash[:error] %>
      <!-- Loading State -->
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mb-4"></div>
        <p class="text-gray-600 text-lg">Fetching tickets from JIRA...</p>
        <p class="text-gray-500 text-sm mt-2">This may take a few seconds</p>
      </div>
    <% end %>

    <!-- Empty State (No Tickets) -->
    <% if @tickets.present? && @tickets.empty? && !flash[:error] %>
      <div class="bg-white rounded-lg shadow-lg p-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No tickets found</h3>
        <p class="text-gray-600 mb-6">Your JQL query didn't match any tickets. Try modifying your query.</p>
        <%= link_to "Modify Query", query_mission_path(@mission), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function toggleDescription(ticketId) {
    const desc = document.getElementById('desc-' + ticketId);
    if (desc.classList.contains('hidden')) {
      desc.classList.remove('hidden');
    } else {
      desc.classList.add('hidden');
    }
  }
</script>
